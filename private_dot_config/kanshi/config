profile "normal" {
    output "eDP-1" disable
    output "HDMI-A-1" scale 0.75
}

profile "scaled up" {
    output "eDP-1" disable
    output "HDMI-A-1" scale 1.0
}

profile "nomad" {
    output "eDP-1" enable
}
